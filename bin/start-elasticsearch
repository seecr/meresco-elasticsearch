from meresco.components import ParseArguments

def main(stateDir, port, **ignored):
    isdir(stateDir) or makedirs(stateDir)

if __name__ == '__main__':
    parser = ParseArguments()
    parser.addOption('', '--stateDir', help='State dir for data and config files for elasticsearch are written.', mandatory=True)
    parser.addOption('-p', '--port', type='int', help='Portnumber', mandatory=True)

    options, arguments = parser.parse()

    main(**vars(options))
